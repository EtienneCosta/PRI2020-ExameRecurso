extends layout 
block content 
    .w3-card-4
        header.w3-container.w3-teal
            h3 Lista de Equipes 
            button.btn.btn-primarry(type='button')  
                a(href='http://localhost:8001/registar') Adicionar
        if teams.length > 0
            .w3-container
                table(class="w3-table-all")
                    tr
                        th ID 
                        th TEAM
                        th PITCH1 
                        th PITCH2 
                        th TECHPITCH 
                        th BusinessReport 
                        th TECHREPORT
                        th NRMEMBERS

                    each t in teams 
                      tr 
                        td= t._id
                        td
                          a(href='http://localhost:8001/'+t._id)= t.team
                        td= t.team 
                        td= t.pitch1 
                        td= t.pitch2 
                        td= t.techPitch 
                        td= t.businessReport
                        td= t.techReport
                        td= t.nmembers 

                         
        else 
            .w3-container
              p Ainda não há equipes registadas ... 
        footer(class="w3-container w3-teal")
            address Gerado por galuno :: 2021-Fevereiro, Etienne Costa

            